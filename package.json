{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "nodemon --watch 'src' --watch '.env' --watch '.env.*' --watch 'tsconfig.json' --ext '*' --exec \"ts-node --esm --swc src/index.ts\"",
		"build": "rimraf dist && tsc",
		"watch": "rimraf dist && tsc -w",
		"start": "node dist/index",
		"test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js"
	},
	"dependencies": {
		"source-map-support": "^0.5.0"
	},
	"devDependencies": {
		"@swc/core": "^1.3.27",
		"@types/jest": "^29.2.5",
		"@types/node": "^18.11.18",
		"@types/source-map-support": "^0.5.6",
		"jest": "^29.3.1",
		"nodemon": "^2.0.20",
		"rimraf": "^4.1.0",
		"ts-jest": "^29.0.5",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"engines": {
		"node": ">=16.0"
	},
	"jest": {
		"preset": "ts-jest/presets/default-esm",
		"testEnvironment": "node",
		"rootDir": ".",
		"moduleNameMapper": {
			"^src/(.*)\\.js$": "<rootDir>/src/$1",
			"^(\\.{1,2}/.*)\\.js$": "$1"
		},
		"transform": {
			"^.+\\.tsx?$": [
				"ts-jest",
				{
					"tsconfig": "tests/tsconfig.json",
					"useESM": true
				}
			]
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/"
		]
	}
}
