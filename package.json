{
	"name": "@username/package-name",
	"version": "1.0.0",
	"description": "Describe your package here.",
	"author": "Your Name <email@example.com> (https://website.org)",
	"repository": "github:username/repository",
	"bugs": "https://github.com/username/repository/issues",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"keywords": [],
	"scripts": {
		"dev": "ts-node-dev --respawn --rs src/index.ts",
		"build": "rimraf dist && tsc",
		"watch": "rimraf dist && tsc -w",
		"start": "node dist/index",
		"test": "jest"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^28.1.6",
		"@types/node": "^16.11.7",
		"jest": "^28.1.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.7",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.4"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"rootDir": ".",
		"moduleNameMapper": {
			"^src/?$": "<rootDir>/src/index.ts",
			"^src/(.*)$": "<rootDir>/src/$1"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tests/tsconfig.json"
			}
		}
	}
}
