{
	"name": "@username/package-name",
	"version": "1.0.0",
	"description": "Describe your package here.",
	"author": "Your Name <email@example.com> (https://website.org)",
	"repository": "github:username/repository",
	"bugs": "https://github.com/username/repository/issues",
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"keywords": [],
	"scripts": {
		"build": "rimraf dist && tsc",
		"test": "jest"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/jest": "^29.5.11",
		"@types/node": "^18.0.0",
		"jest": "^29.7.0",
		"rimraf": "^5.0.5",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"rootDir": ".",
		"testMatch": ["<rootDir>/tests/**/*.test.ts", "<rootDir>/tests/**/*.spec.ts"],
		"moduleNameMapper": {
			"^src/?$": "<rootDir>/src/index.ts",
			"^src/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.tsx?$": ["ts-jest", {
				"tsconfig": "tests/tsconfig.json"
			}]
		}
	}
}
